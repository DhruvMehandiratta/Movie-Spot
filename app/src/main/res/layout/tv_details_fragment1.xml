<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/title_details_activity_strip"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_image_logo_final"/>
        <TextView
            android:id="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Genres: "
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_below="@+id/tv_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_genre"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_below="@+id/tv_genre"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Of Seasons/No. Of Episodes"
            android:id="@+id/seasons"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_season_text"
            />
        <TextView

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First air date:  "
            android:id="@+id/first"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_below="@+id/first"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstText"
            />

        <TextView
            android:layout_below="@+id/firstText"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last air date:  "
            android:id="@+id/last"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_below="@+id/last"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastText"
            />

        <TextView
            android:layout_below="@+id/lastText"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:  "
            android:id="@+id/status"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_below="@+id/status"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/statusText"
            />

        <TextView
            android:layout_below="@+id/statusText"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis:   "
            android:id="@+id/tv_synopsis"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_below="@+id/tv_synopsis"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_synopsisText"
            />

        <TextView
            android:layout_below="@+id/tv_synopsisText"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_checkout"
            android:text="If you like this show, check out..."/>

        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_below="@+id/tv_checkout"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="300dp"-->
            <!--android:id="@+id/tv_horizontal_list_for_fragment"-->
            <!--android:orientation="horizontal"-->
            <!--app:layoutManager="android.support.v7.widget.LinearLayoutManager">-->

        <!--</android.support.v7.widget.RecyclerView>-->

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>